{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "vite-env.d.ts", "tsconfig.json", "tsconfig.node.json", "frontend/src/types", "frontend/src/App.tsx", "frontend/src/main.tsx", "frontend/src/vite-env.d.ts", "frontend/src/components", "frontend/src/hooks", "frontend/src/lib"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
